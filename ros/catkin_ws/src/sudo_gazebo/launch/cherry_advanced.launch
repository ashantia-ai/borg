<launch>
  <arg name="use_sim_time" default="true"/>
  <!--Set use sim_time flag -->
  <group if="$(arg use_sim_time)">
    <param name="/use_sim_time" value="true" />
  </group>
  

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find sudo_gazebo)/worlds/kitchen_fin_noobs.world"/>
    <!-- more default parameters can be changed here -->
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
  </include>
  
  <!-- Spawn sudo into Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-file $(find sudo_description)/sdf/pioneer2d.sdf -sdf -x 0 -y 0 -z 0.02 -model sudo-spawn"/>  
  <!-- Calling transforms -->
  
</launch>
